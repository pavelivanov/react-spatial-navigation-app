.mediaCard
  size 100%
  background-color: #fff
  absolute top 0 left 0

.preview
  width: 100%
  height: 50%
  background-size cover
  background-position: center
  background-repeat no-repeat
  overflow: hidden
  absolute top 0 left 0

.content
  width: 100%
  height: 50%
  padding 10px
  absolute bottom 0 left 0

.title
  margin-bottom: 10px
  font-family: 'PT Sans'
  font-size: 2.5em

.count
  margin-bottom: 5px
  font-size: 2em

